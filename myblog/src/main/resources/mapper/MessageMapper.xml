<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myblog.mapper.MessageMapper">

    <resultMap type="com.myblog.entity.Message" id="MessageMap">
        <result property="messageId" column="message_id" jdbcType="INTEGER"/>
        <result property="messageUserId" column="message_user_id" jdbcType="INTEGER"/>
        <result property="messageContent" column="message_content" jdbcType="VARCHAR"/>
        <result property="messageCreateTime" column="message_create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MessageMap">
        select message_id,
               message_user_id,
               message_content,
               message_create_time
        from db_myblog.message
        where message_id = #{messageId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MessageMap">
        select message_id,
               message_user_id,
               message_content,
               message_create_time
        from db_myblog.message
        limit #{offset}, #{limit}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="messageId" useGeneratedKeys="true">
        insert into db_myblog.message(message_user_id, message_content, message_create_time)
        values (#{messageUserId}, #{messageContent}, #{messageCreateTime})
    </insert>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from db_myblog.message
        where message_id = #{messageId}
    </delete>

</mapper>

